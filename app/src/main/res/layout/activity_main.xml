<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/currentbutton"
        android:layout_width="109dp"
        android:layout_height="59dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="226dp"
        android:text="Current Order"
        android:onClick="orderOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/storebutton"
        android:layout_width="109dp"
        android:layout_height="59dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="226dp"
        android:text="Store Orders"
        android:onClick="storeOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="618dp"
        android:text="RUPizzeria Main Menu"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/chicagobutton"
        android:layout_width="116dp"
        android:layout_height="77dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="358dp"
        android:text="Create Chicago Style"
        android:onClick="chicagoOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newyorkbutton"
        android:layout_width="118dp"
        android:layout_height="68dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="358dp"
        android:text="Create New York Style"
        android:onClick="nyOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>